STT_PROVIDER=faster-whisper
WHISPER_PYTHON_BIN=python3
FASTER_WHISPER_MODEL=large-v3-turbo
# Audio chunks below this level are not sent to STT (dBFS, range -120 to -10).
STT_SEND_AUDIO_FLOOR_DBFS=-55
# Optional faster-whisper decoding filters (more strict = fewer hallucinations, but may miss quiet speech).
FASTER_WHISPER_MIN_SEGMENT_LOGPROB=-1.0
FASTER_WHISPER_MAX_NO_SPEECH_PROB=0.6
FASTER_WHISPER_MAX_COMPRESSION_RATIO=2.4
FASTER_WHISPER_HALLUCINATION_SILENCE_THRESHOLD=0.8
LLM_PROVIDER=openai # anthropic
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
